#!/usr/bin/env bash
set -euo pipefail

# -------- Config --------
FLYWAY_IMAGE="${FLYWAY_IMAGE:-docker.io/flyway/flyway:12-alpine}"

# Script lives in kiwi/db
SCRIPT_DIR="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" && pwd)"
DB_DIR="${SCRIPT_DIR}"
REPO_ROOT="$(cd -- "${DB_DIR}/.." && pwd)"

SQL_DIR="${SQL_DIR:-${DB_DIR}/sql}"
CONF_FILE="${CONF_FILE:-${DB_DIR}/flyway.conf}"
ENV_FILE="${ENV_FILE:-${REPO_ROOT}/.env}"

# -------- Load .env from repo root if present --------
# (This is optional; db/Makefile also supports interactive prompts)
if [[ -f "$ENV_FILE" ]]; then
  set -a
  # shellcheck disable=SC1090
  source "$ENV_FILE"
  set +a
fi

# -------- Required env vars --------
: "${FLYWAY_URL:?Missing FLYWAY_URL}"
: "${FLYWAY_USER:?Missing FLYWAY_USER}"
: "${FLYWAY_PASSWORD:?Missing FLYWAY_PASSWORD}"

# -------- Sanity checks --------
if [[ ! -d "$SQL_DIR" ]]; then
  echo "ERROR: SQL directory '$SQL_DIR' not found"
  exit 2
fi

if [[ ! -f "$CONF_FILE" ]]; then
  echo "ERROR: Flyway config '$CONF_FILE' not found"
  exit 3
fi

# -------- Container runtime --------
OS_NAME="$(uname -s | tr '[:upper:]' '[:lower:]')"

# Allow explicit selection
if [[ -n "${FLYWAY_RUNTIME:-}" ]]; then
  RUNTIME="$FLYWAY_RUNTIME"
else
  # Default selection:
  # - macOS: prefer docker (podman machine mounts may not include /Users by default)
  # - others: prefer podman if present
  if [[ "$OS_NAME" == "darwin"* ]]; then
    if command -v docker >/dev/null 2>&1; then
      RUNTIME="docker"
    elif command -v podman >/dev/null 2>&1; then
      RUNTIME="podman"
    else
      echo "ERROR: neither docker nor podman found in PATH" >&2
      exit 4
    fi
  else
    if command -v podman >/dev/null 2>&1; then
      RUNTIME="podman"
    elif command -v docker >/dev/null 2>&1; then
      RUNTIME="docker"
    else
      echo "ERROR: neither docker nor podman found in PATH" >&2
      exit 4
    fi
  fi
fi

# -------- Network mode --------
# For remote DB connections this is unnecessary; also "--network host" is not supported
# in Docker Desktop on macOS. Keep it configurable.
declare -a NET_ARGS
NET_ARGS=()
if [[ -n "${FLYWAY_NET_ARGS:-}" ]]; then
  # shellcheck disable=SC2206
  NET_ARGS=(${FLYWAY_NET_ARGS})
else
  if [[ "$OS_NAME" != "darwin"* ]]; then
    NET_ARGS=(--network host)
  fi
fi

# -------- Run Flyway --------
exec "$RUNTIME" run --rm \
  "${NET_ARGS[@]+${NET_ARGS[@]}}" \
  -e FLYWAY_URL \
  -e FLYWAY_USER \
  -e FLYWAY_PASSWORD \
  -v "${SQL_DIR}:/flyway/sql:ro" \
  -v "${CONF_FILE}:/flyway/conf/flyway.conf:ro" \
  "$FLYWAY_IMAGE" "$@"
